<script>
    const currentUser ={{{json currentUser}}};
    const SHIFT_MAP = {
        'ca1': { catruc: 1, time: '7:30am - 9:30am' },
        'ca2': { catruc: 2, time: '9:30am - 11:30am' },
        'ca3': { catruc: 3, time: '13:30pm - 15:30pm' },
        'ca4': { catruc: 4, time: '15:30pm - 17:00pm' }
    };

    const DAY_MAP = {
        'thứ2': 2,
        'thứ4': 4,
        'thứ6': 6
    };


    function getShiftTime(catruc) {
        const shift = Object.values(SHIFT_MAP).find(s => s.catruc === catruc);
        return shift ? shift.time : '';
    }

    async function loadSchedule() {
        try {
            const response = await fetchWithAuth('/dang-ky-ca-truc/schedule');
            if (response.success) {
                updateScheduleTable(response.data);
            }
        } catch (error) {
            showAlert('Lỗi khi tải lịch trực', error);
        }
    }

    function updateScheduleTable(scheduleData) {
        const tbody = document.querySelector('tbody');
        tbody.innerHTML = '';

        Object.values(SHIFT_MAP).forEach(shift => {
            const tr = document.createElement('tr');

            // Cột giờ trực
            const tdTime = document.createElement('td');
            tdTime.setAttribute('data-label', 'Ca trực');
            tdTime.className = 'align-middle';
            tdTime.textContent = shift.time;
            tr.appendChild(tdTime);

            // Các cột thứ 2,4,6
            Object.values(DAY_MAP).forEach((day, index) => {
                const td = document.createElement('td');
                const dayLabel = ['Thứ 2', 'Thứ 4', 'Thứ 6'][index];
                td.setAttribute('data-label', dayLabel);
                
                const users = scheduleData[shift.catruc][day] || [];

                if (users.length > 0) {
                    const userList = document.createElement('div');
                    userList.className = 'registered-users';
                    
                    // Hiển thị số lượng đăng ký
                    const countDiv = document.createElement('div');
                    countDiv.className = 'count-info text-secondary mt-2';
                    countDiv.textContent = `${users.length}/6 đã đăng ký`;
                    td.appendChild(countDiv);

                    users.forEach(user => {
                        const userDiv = document.createElement('div');
                        userDiv.className = 'user-item';
                        userDiv.setAttribute('data-id', user.schedule_id);
                        userDiv.innerHTML = `
                            <span>${user.hoten} (${user.mssv})</span>
                            ${user.mssv === currentUser.mssv || currentUser.role === 'admin' ?
                                `<button class="delete-icon" onclick="cancelShift(${day}, ${shift.catruc})">
                                    <i class="mdi mdi-close"></i>
                                </button>` : ''
                            }
                        `;
                        userList.appendChild(userDiv);
                    });

                    td.appendChild(userList);
                }

                tr.appendChild(td);
            });

            tbody.appendChild(tr);
        });
    }

    async function cancelShift(ngaytrongtuan, catruc) {
        try {
            const response = await fetchWithAuth(
                    `/dang-ky-ca-truc/cancel/${ngaytrongtuan}/${catruc}`,
                    { method: 'DELETE' }
            );

            if (response.success) {
                showAlert('Hủy ca trực thành công', 'success');
                loadSchedule();
            } else {
                showAlert(response.message);
            }
        } catch (error) {
            showAlert('Lỗi khi hủy ca trực');
        }
    }

    async function registerShift() {
        const ngayTruc = document.getElementById('ngayTruc').value;
        const caTruc = document.getElementById('caTruc').value;

        try {
            const response = await fetchWithAuth('/dang-ky-ca-truc/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    ngaytrongtuan: DAY_MAP[ngayTruc],
                    catruc: SHIFT_MAP[caTruc].catruc
                })
            });

            if (response.success) {
                showAlert('Đăng ký ca trực thành công', 'success');
                loadSchedule();
            } else {
                showAlert(response.message);
            }
        } catch (error) {
            showAlert('Lỗi khi đăng ký ca trực');
        }
    }


    document.addEventListener('DOMContentLoaded', loadSchedule);
</script>