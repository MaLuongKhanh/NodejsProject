<script>
    const checkAuthStatus = async () => {
        try {
            const response = await fetch('/auth/check', {
                credentials: 'include'
            });

            const data = await response.json();

            if (data.success) {
                // Redirect if user do not have role customer
                if (data.user.role !== 'customer') {
                    if (data.user.role == 'admin') {
                        window.location.href = '/admin';
                        return;
                    }
                    window.location.href = '/trang-chu';
                    return;

                }

                // Otherwise update login button for customers
                const loginButton = document.querySelector('a[href="/dang-nhap"]');
                if (!loginButton) return;

                const parent = loginButton.parentElement;
                parent.style.marginTop = '17.5px';
                parent.innerHTML = `
                <button onclick="handleLogout()"
                        class="btn btn-border-w btn-round logout-btn"
                        onmouseover="showWelcome()"
                        onmouseout="hideWelcome()">
                    <strong>Đăng xuất</strong>
                </button>
                <div class="welcome-message" id="welcomeMessage">
                    <h5>Chào mừng ${data.user.username}!</h5>
                </div>
            `;
            }
        } catch (error) {
            console.error('Auth check failed:', error);
        }
    };

    const handleLogout = async () => {
        try {
            const response = await fetch('/dang-xuat', {
                method: 'POST',
                credentials: 'include'
            });

            const data = await response.json();
            if (data.success) {
                window.location.reload();
            }
        } catch (error) {
            console.error('Logout failed:', error);
        }
    };

    function showWelcome() {
        const welcomeMessage = document.getElementById('welcomeMessage');
        welcomeMessage.style.opacity = '1';
        welcomeMessage.style.visibility = 'visible';
    }

    function hideWelcome() {
        const welcomeMessage = document.getElementById('welcomeMessage');
        welcomeMessage.style.opacity = '0';
        welcomeMessage.style.visibility = 'hidden';
    }

    // Kiểm tra khi trang load
    document.addEventListener('DOMContentLoaded', checkAuthStatus);

    // Thêm hàm showAlert
    const showAlert = (message, type = 'error') => {
        const alert = document.getElementById(type === 'error' ? 'errorAlert' : 'successAlert');
        alert.textContent = message;
        alert.style.display = 'block';

        setTimeout(() => {
            alert.style.display = 'none';
        }, 3000);
    };

    document.getElementById('orderForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const formData = {
            studentName: document.getElementById('name').value,
            studentId: document.getElementById('id').value,
            studentEmail: document.getElementById('email').value,
            studentPhone: document.getElementById('phonenumber').value,
            studentDevice: document.getElementById('device-type').value,
            devicePassword: document.getElementById('password').value,
            dateSend: document.getElementById('send-date').value,
            requestContent: document.getElementById('describe').value
        };

        try {
            const response = await fetch('/yeu-cau-ho-tro', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const data = await response.json();

            if (data.success) {
                showAlert('Gửi yêu cầu thành công', 'success');
                e.target.reset();
            } else {
                showAlert(data.message || 'Có lỗi xảy ra');
            }
        } catch (error) {
            showAlert('Đã có lỗi xảy ra khi gửi yêu cầu');
        }
    });

    // Cập nhật smoothscroll event listeners
    document.addEventListener('DOMContentLoaded', function () {
        // Xử lý smooth scroll cho tất cả các anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');

                // Bỏ qua nếu href="#"
                if (targetId === '#') return;

                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    });
</script>
